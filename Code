<div class="container mx-auto px-4 py-8">
    <div class="card">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-2">Veracity Engine</h1>
        <p class="text-center text-gray-500 mb-6">Enter a claim, URL, or image to check its credibility.</p>

        <div class="flex justify-center mb-6 space-x-4">
            <input type="radio" id="input-text" name="input-type" value="text" checked>
            <label for="input-text">üìù Text</label>

            <input type="radio" id="input-url" name="input-type" value="url">
            <label for="input-url">üîó URL</label>

            <input type="radio" id="input-image" name="input-type" value="image">
            <label for="input-image">üñºÔ∏è Image</label>
        </div>

        <div class="flex flex-col space-y-4">
            <div id="text-input-group" class="input-group active">
                <textarea id="claimInput" rows="4" class="w-full p-4 text-gray-700 border border-blue-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all" placeholder="E.g., 'A new study shows that drinking coffee cures the common cold.'"></textarea>
            </div>
            <div id="url-input-group" class="input-group">
                <input type="url" id="urlInput" class="w-full p-4 text-gray-700 border border-blue-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all" placeholder="E.g., https://example.com/fake-news-article">
            </div>
            <div id="image-input-group" class="input-group">
                <label for="imageInput" class="block text-sm font-medium text-gray-700 mb-2">Select an image file:</label>
                <input type="file" id="imageInput" accept="image/*" class="w-full p-2 text-gray-700 border border-blue-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all">
                <div id="image-preview" class="mt-4 hidden max-w-full h-auto rounded-lg"></div>
            </div>

            <button id="checkButton" class="w-full bg-blue-700 text-white font-semibold py-3 rounded-lg hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition-colors">
                Check Credibility
            </button>
        </div>

        <div id="loadingIndicator" class="mt-8 flex justify-center hidden">
            <div class="w-8 h-8 border-4 border-t-4 border-gray-200 border-t-blue-500 rounded-full animate-spin"></div>
        </div>

        <div id="resultsOutput" class="mt-8 hidden">
            <div class="mb-4">
                <h2 class="text-xl font-semibold text-gray-800">Credibility Analysis</h2>
                <span id="credibilityScore"></span>
            </div>
            <div id="summary">
                <h3 class="text-lg font-semibold text-gray-700 mb-2">Summary of Findings:</h3>
                <ul id="summaryList" class="text-gray-600 space-y-2"></ul>
            </div>
            <div id="citations" class="mt-6">
                <h3 class="text-lg font-semibold text-gray-700 mb-2">Sources:</h3>
                <ul id="citationsList" class="text-gray-500 text-sm space-y-1"></ul>
            </div>
        </div>

        <div id="errorBox" class="mt-8 p-4 bg-red-100 text-red-700 rounded-lg hidden">
            An error occurred. Please try again.
        </div>
    </div>
</div>

<script>
    const inputRadios = document.querySelectorAll('input[name="input-type"]');
    const inputGroups = document.querySelectorAll('.input-group');
    const claimInput = document.getElementById('claimInput');
    const urlInput = document.getElementById('urlInput');
    const imageInput = document.getElementById('imageInput');
    const imagePreview = document.getElementById('image-preview');
    const checkButton = document.getElementById('checkButton');
    const loadingIndicator = document.getElementById('loadingIndicator');
    const resultsOutput = document.getElementById('resultsOutput');
    const credibilityScore = document.getElementById('credibilityScore');
    const summaryList = document.getElementById('summaryList');
    const citationsList = document.getElementById('citationsList');
    const errorBox = document.getElementById('errorBox');

    inputRadios.forEach(radio => {
        radio.addEventListener('change', () => {
            inputGroups.forEach(group => group.classList.remove('active'));
            document.getElementById(`${radio.value}-input-group`).classList.add('active');
            // Clear inputs and preview on type change
            claimInput.value = '';
            urlInput.value = '';
            imageInput.value = '';
            imagePreview.innerHTML = '';
            imagePreview.classList.add('hidden');
        });
    });

    imageInput.addEventListener('change', (event) => {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = (e) => {
                imagePreview.innerHTML = `
                    <div class="image-preview-container">
                        <img src="${e.target.result}" alt="Image Preview" class="w-full rounded-lg">
                        <span class="image-preview-close" onclick="clearImage()">&times;</span>
                    </div>
                `;
                imagePreview.classList.remove('hidden');
            };
            reader.readAsDataURL(file);
        } else {
            clearImage();
        }
    });

    // Function to clear the image input and preview
    function clearImage() {
        imageInput.value = '';
        imagePreview.innerHTML = '';
        imagePreview.classList.add('hidden');
    }

    checkButton.addEventListener('click', async () => {
        const selectedInputType = document.querySelector('input[name="input-type"]:checked').value;
        let userClaim = '';
        let base64ImageData = null;

        if (selectedInputType === 'text') {
            userClaim = claimInput.value.trim();
        } else if (selectedInputType === 'url') {
            userClaim = urlInput.value.trim();
        } else if (selectedInputType === 'image') {
            const file = imageInput.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = () => {
                    base64ImageData = reader.result.split(',')[1];
                    sendApiRequest(userClaim, base64ImageData);
                };
                reader.readAsDataURL(file);
                return; // Exit here and wait for file reader to complete
            }
        }

        if (!userClaim && !base64ImageData) {
            errorBox.textContent = 'Please provide input to check.';
            errorBox.classList.remove('hidden');
            return;
        }

        sendApiRequest(userClaim, base64ImageData);
    });

    async function sendApiRequest(userClaim, base64ImageData) {
        // Reset UI
        resultsOutput.classList.add('hidden');
        errorBox.classList.add('hidden');
        loadingIndicator.classList.remove('hidden');
        summaryList.innerHTML = '';
        citationsList.innerHTML = '';
        credibilityScore.className = '';
        credibilityScore.textContent = '';

        try {
            const systemPrompt = `You are a professional fact-checker and misinformation analyst. Your task is to analyze a given claim, which may be text, a URL, or an image. Assess its credibility based on external sources, and present your findings in a clear, structured format. You must determine a credibility score and provide a bulleted summary of your analysis.`;
            const userQueryText = `Analyze the credibility of the following content: "${userClaim}". Based on your analysis, please provide:
1. A credibility score. Use one of the following labels: 'High Credibility', 'Medium Credibility', 'Low Credibility', or 'Unverified'.
2. A bulleted summary of your findings. The summary should explain why you assigned that score and reference the sources you used.`;

            const payload = {
                contents: [
                    {
                        role: "user",
                        parts: [
                            { text: userQueryText }
                        ]
                    }
                ],
                tools: [{ "google_search": {} }],
                systemInstruction: { parts: [{ text: systemPrompt }] },
            };
            
            if (base64ImageData) {
                payload.contents[0].parts.push({
                    inlineData: {
                        mimeType: "image/png",
                        data: base64ImageData
                    }
                });
            }

            const apiKey = "AIzaSyCPqgZcboU4yYw06V5iDLo3jwBAz6GjmWA";
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;

            // Implement exponential backoff for API calls
            const maxRetries = 5;
            let retryCount = 0;
            let response;
            while (retryCount < maxRetries) {
                try {
                    response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (response.ok) {
                        break;
                    } else if (response.status === 429) {
                        const delay = Math.pow(2, retryCount) * 1000 + Math.random() * 1000;
                        console.warn(`Rate limit exceeded. Retrying in ${delay}ms...`);
                        await new Promise(resolve => setTimeout(resolve, delay));
                        retryCount++;
                    } else {
                        throw new Error(`API returned status code ${response.status}`);
                    }
                } catch (e) {
                    if (retryCount === maxRetries - 1) {
                        throw e;
                    }
                    retryCount++;
                }
            }

            if (!response || !response.ok) {
                throw new Error('Failed to get a successful response after multiple retries.');
            }

            const result = await response.json();
            const candidate = result.candidates?.[0];

            if (candidate && candidate.content?.parts?.[0]?.text) {
                const text = candidate.content.parts[0].text;
                
                // Extract credibility score and summary from the text
                const scoreMatch = text.match(/(High Credibility|Medium Credibility|Low Credibility|Unverified)/i);
                
                let score = 'Unverified';
                if (scoreMatch) {
                    score = scoreMatch[0];
                }

                const summaryStart = text.indexOf('Summary of Findings:');
                const summaryText = summaryStart !== -1 ? text.substring(summaryStart) : text;
                const bulletPoints = summaryText.split(/[\r\n]+/).filter(line => line.trim().startsWith('*')).map(line => line.trim().substring(1).trim());

                // Apply dynamic styles based on score
                credibilityScore.textContent = `Score: ${score}`;
                credibilityScore.className = '';
                credibilityScore.classList.add(score.toLowerCase().replace(/\s/g, ''), 'text-xl', 'font-bold', 'px-4', 'py-2', 'rounded-full', 'inline-block');
                
                // Populate the summary list
                summaryList.innerHTML = bulletPoints.map(item => `<li>${item}</li>`).join('');

                // Extract and display grounding sources
                const groundingMetadata = candidate.groundingMetadata;
                if (groundingMetadata && groundingMetadata.groundingAttributions) {
                    const sources = groundingMetadata.groundingAttributions
                        .map(attribution => ({
                            uri: attribution.web?.uri,
                            title: attribution.web?.title,
                        }))
                        .filter(source => source.uri && source.title);

                    if (sources.length > 0) {
                        const citationsHtml = sources.map(source => 
                            `<li><a href="${source.uri}" target="_blank" class="text-blue-600 hover:underline">${source.title}</a></li>`
                        ).join('');
                        citationsList.innerHTML = citationsHtml;
                    } else {
                        citationsList.innerHTML = '<li>No specific sources found.</li>';
                    }
                } else {
                    citationsList.innerHTML = '<li>No specific sources found.</li>';
                }

                resultsOutput.classList.remove('hidden');
            } else {
                throw new Error('API response was not in the expected format.');
            }

        } catch (error) {
            console.error('Error:', error);
            errorBox.textContent = 'An error occurred. Please try again.';
            errorBox.classList.remove('hidden');
        } finally {
            loadingIndicator.classList.add('hidden');
        }
    }
</script>

</body>
</html>
